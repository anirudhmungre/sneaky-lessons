{
  "presets": ["lint-recommended", "lint-consistent"],
  "settings": {
    "gfm": true,
    "commonmark": false,
    "rule": "-",
    "bullet": "*",
    "listItemIndent": 1,
    "fences": true
  },
  "plugins": {
    "lint": {
      "blockquote-indentation": 1,
      "list-item-indent": "space",
      "no-heading-punctuation": false,
      "no-duplicate-headings": true,
      "table-pipe-alignment": false,
      "table-cell-padding": false,
      "blockquote-indentation": 2,
      "code-block-style": "fenced"
    }
  }
}
